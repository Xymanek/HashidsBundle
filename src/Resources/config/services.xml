<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="xymanek_hashids.class">Hashids\Hashids</parameter>
        <parameter key="xymanek_hashids.default_domain">default</parameter>
    </parameters>

    <services>
        <service id="xymanek_hashids.abstract" class="%xymanek_hashids.class%" public="true" abstract="true">
            <!-- Salt -->
            <!-- Minimum hash length -->
            <!-- Alphabet -->
        </service>

        <service id="hashids_registry" class="Xymanek\HashidsBundle\HashidsDomainsRegistry">
            <argument id="xymanek_hashids.resolver" type="service"/>
            <argument>%xymanek_hashids.default_domain%</argument>
        </service>

        <service id="xymanek_hashids.twig_extension.hashids" public="false"
                 class="Xymanek\HashidsBundle\Twig\Extension\HashidsExtension">
            <argument id="hashids_registry" type="service"/>

            <tag name="twig.extension"/>
        </service>

        <service id="xymanek_hashids.event_listener.hashids" public="false"
                 class="Xymanek\HashidsBundle\EventListener\HashidsEventListener">
            <argument id="hashids_registry" type="service"/>
            <argument id="annotation_reader" type="service"/>

            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" priority="5"/>
        </service>
    </services>
</container>
